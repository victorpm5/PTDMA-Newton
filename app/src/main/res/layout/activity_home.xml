<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <ScrollView
        android:layout_above="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include android:id="@+id/message1"
                layout="@layout/card_view_message" />

            <include android:id="@+id/message2"
                layout="@layout/card_view_message" />

            <include android:id="@+id/message3"
                layout="@layout/card_view_message" />

            <include layout="@layout/card_view_weather_one_day" />
            <include layout="@layout/card_view_weather_three_days" />
            <include layout="@layout/card_view_weather_three_days" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_graba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationBar"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_centerHorizontal="true"
        app:fabCustomSize="64dp"
        app:maxImageSize="50dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationBar"
        android:background="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>